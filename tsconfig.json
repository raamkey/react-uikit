{
    "compilerOptions": {
        "target": "es2016",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "dist",
        "sourceMap": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true
    },
    "include": ["./src", "./global.d.ts"]
}
